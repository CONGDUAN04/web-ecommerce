generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // url      = env("DATABASE_URL")
}

// ==================== USERS & ROLES ====================
model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText
  expiresAt DateTime

  @@map("sessions")
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique @db.VarChar(100)
  description String @db.VarChar(255)

  users User[]

  @@map("roles")
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique @db.VarChar(255)
  password    String  @db.VarChar(255)
  fullName    String? @db.VarChar(255)
  address     String? @db.VarChar(255)
  phone       String? @db.VarChar(255)
  accountType String? @db.VarChar(50)
  avatar      String? @db.VarChar(255)

  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  cart      Cart?
  orders    Order[]
  reviews   Review[]
  wishlists Wishlist[]

  @@map("users")
}

// ==================== CATEGORY ====================
model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique @db.VarChar(255)
  description String?   @db.Text
  image       String?   @db.VarChar(255)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@map("categories")
}

// ==================== BRAND ====================
model Brand {
  id         Int      @id @default(autoincrement())
  name       String   @unique @db.VarChar(255)
  imageBrand String?  @db.VarChar(255)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  products Product[]

  @@map("brands")
}

// ==================== TARGET ====================
model Target {
  id          Int       @id @default(autoincrement())
  name        String    @unique @db.VarChar(100)
  description String?   @db.Text
  products    Product[]

  @@map("targets")
}

// ==================== PRODUCT ====================
model Product {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(255)
  desc       String    @db.MediumText
  thumbnail  String?   @db.VarChar(255)
  quantity   Int
  sold       Int       @default(0)
  target     Target?   @relation(fields: [targetId], references: [id])
  targetId   Int?
  brand      Brand?    @relation(fields: [brandId], references: [id])
  brandId    Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?

  colors       ColorVariant[]
  cartDetails  CartDetail[]
  orderDetails OrderDetail[]
  reviews      Review[]
  wishlists    Wishlist[]

  @@index([categoryId])
  @@index([brandId])
  @@index([targetId])
  @@map("products")
}

// ==================== COLOR & STORAGE ====================
model ColorVariant {
  id        Int     @id @default(autoincrement())
  color     String  @db.VarChar(100)
  image     String? @db.VarChar(255)
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  storages StorageVariant[]

  @@index([productId])
  @@map("color_variants")
}

model StorageVariant {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(100) // 128GB, 512GB, ...
  price    Int
  quantity Int
  sold     Int    @default(0)

  color   ColorVariant @relation(fields: [colorId], references: [id])
  colorId Int

  orderDetails OrderDetailVariant[]
  cartDetails  CartDetailVariant[]

  @@index([colorId])
  @@map("storage_variants")
}

// ==================== CART ====================
model Cart {
  id  Int @id @default(autoincrement())
  sum Int

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  cartDetails        CartDetail[]
  cartDetailVariants CartDetailVariant[]

  @@map("carts")
}

model CartDetail {
  id       Int @id @default(autoincrement())
  price    Int
  quantity Int

  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@map("cart_detail")
}

model CartDetailVariant {
  id       Int @id @default(autoincrement())
  price    Int
  quantity Int

  cart   Cart @relation(fields: [cartId], references: [id])
  cartId Int

  storage   StorageVariant @relation(fields: [storageId], references: [id])
  storageId Int

  @@map("cart_detail_variant")
}

// ==================== ORDER ====================
model Order {
  id              Int     @id @default(autoincrement())
  totalPrice      Int
  receiverAddress String  @db.VarChar(255)
  receiverName    String  @db.VarChar(255)
  receiverPhone   String  @db.VarChar(255)
  status          String  @default("PENDING")
  paymentMethod   String
  paymentStatus   String
  paymentRef      String?

  user   User @relation(fields: [userId], references: [id])
  userId Int

  voucher   Voucher? @relation(fields: [voucherId], references: [id])
  voucherId Int?

  orderDetails        OrderDetail[]
  orderDetailVariants OrderDetailVariant[]

  @@index([userId])
  @@map("orders")
}

model OrderDetail {
  id       Int @id @default(autoincrement())
  price    Int
  quantity Int

  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@index([orderId])
  @@index([productId])
  @@map("order_detail")
}

model OrderDetailVariant {
  id       Int @id @default(autoincrement())
  price    Int
  quantity Int

  order   Order @relation(fields: [orderId], references: [id])
  orderId Int

  storage   StorageVariant @relation(fields: [storageId], references: [id])
  storageId Int

  @@index([orderId])
  @@index([storageId])
  @@map("order_detail_variant")
}

// ==================== REVIEW ====================
model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, productId])
  @@index([productId])
  @@map("reviews")
}

// ==================== VOUCHER ====================
model Voucher {
  id         Int      @id @default(autoincrement())
  code       String   @unique @db.VarChar(50)
  discount   Int
  startDate  DateTime
  endDate    DateTime
  usageLimit Int?
  usedCount  Int      @default(0)
  isActive   Boolean  @default(true)

  orders Order[]

  @@index([code])
  @@map("vouchers")
}

// ==================== WISHLIST ====================
model Wishlist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("wishlist")
}
