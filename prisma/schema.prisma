generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // url      = env("DATABASE_URL")
}

// /**
//  * ===================== ENUM =====================
//  */

enum AccountType {
  SYSTEM
  GOOGLE
  GITHUB
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPING
  COMPLETED
  CANCELLED
  RETURNED
}

enum PaymentMethod {
  COD
  PAYPAL
  BANKING
}

enum OrderPaymentStatus {
  UNPAID
  PAID
  REFUNDED
}

enum PaymentProvider {
  COD
  PAYPAL
  VNPAY
  STRIPE
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum VoucherType {
  PERCENT
  FIXED
}

/**
 * ===================== AUTH =====================
 */

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(100)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[]

  @@map("roles")
}

model User {
  id          Int         @id @default(autoincrement())
  username    String      @unique @db.VarChar(255)
  password    String      @db.VarChar(255)
  fullName    String?
  phone       String?     @unique
  avatar      String?
  accountType AccountType @default(SYSTEM)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role   Role? @relation(fields: [roleId], references: [id])
  roleId Int?

  cart      Cart?
  orders    Order[]
  reviews   Review[]
  wishlists Wishlist[]
  addresses Address[]

  @@index([roleId])
  @@map("users")
}

/**
 * ===================== PRODUCT =====================
 */

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("categories")
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@map("brands")
}

model Target {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("targets")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  thumbnail   String?
  slug        String  @unique
  description String?

  quantity Int @default(0)
  /// ⚠️ CACHE FIELD
  /// Tổng tồn kho = SUM(StorageVariant.quantity)
  /// ❌ KHÔNG update trực tiếp từ API

  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  brandId    Int?
  categoryId Int?
  targetId   Int?

  brand    Brand?    @relation(fields: [brandId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])
  target   Target?   @relation(fields: [targetId], references: [id])

  colors         ColorVariant[]
  reviews        Review[]
  wishlists      Wishlist[]
  productImages  ProductImage[]
  specifications Specification[]

  @@index([brandId])
  @@index([categoryId])
  @@index([targetId])
  @@index([isActive])
  @@map("products")
}

/**
 * ===================== VARIANT =====================
 */

model ColorVariant {
  id    Int     @id @default(autoincrement())
  color String
  image String?

  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  storages StorageVariant[]

  @@unique([productId, color])
  @@index([productId])
  @@index([isActive])
  @@map("color_variants")
}

model StorageVariant {
  id       Int    @id @default(autoincrement())
  sku      String @unique @db.VarChar(100)
  name     String
  price    Int
  quantity Int    @default(0)
  sold     Int    @default(0)

  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  color   ColorVariant @relation(fields: [colorId], references: [id], onDelete: Cascade)
  colorId Int

  cartItems  CartItem[]
  orderItems OrderItem[]

  @@unique([colorId, name])
  @@index([colorId])
  @@index([price])
  @@index([isActive])
  @@map("storage_variants")
}

/**
 * ===================== CART =====================
 */

model Cart {
  id        Int      @id @default(autoincrement())
  sum       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @unique

  cartItems CartItem[]

  @@map("carts")
}

model CartItem {
  id        Int      @id @default(autoincrement())
  price     Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart      Cart           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    Int
  storage   StorageVariant @relation(fields: [storageId], references: [id], onDelete: Cascade)
  storageId Int

  @@unique([cartId, storageId])
  @@index([cartId])
  @@index([storageId])
  @@map("cart_items")
}

/**
 * ===================== ORDER =====================
 */

model Order {
  id              Int    @id @default(autoincrement())
  totalPrice      Int
  receiverName    String
  receiverPhone   String
  receiverAddress String

  status        OrderStatus
  paymentMethod PaymentMethod
  paymentStatus OrderPaymentStatus @default(UNPAID)
  paymentRef    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  voucher   Voucher? @relation(fields: [voucherId], references: [id])
  voucherId Int?

  orderItems OrderItem[]
  payments   Payment[]

  @@index([userId])
  @@index([status])
  @@index([paymentStatus])
  @@index([createdAt])
  @@map("orders")
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  price     Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order     Order          @relation(fields: [orderId], references: [id])
  orderId   Int
  storage   StorageVariant @relation(fields: [storageId], references: [id])
  storageId Int

  @@index([orderId])
  @@index([storageId])
  @@map("order_items")
}

/**
 * ===================== PAYMENT =====================
 */

model Payment {
  id        Int             @id @default(autoincrement())
  amount    Int
  provider  PaymentProvider
  status    PaymentStatus
  rawData   Json?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  order   Order @relation(fields: [orderId], references: [id])
  orderId Int

  @@index([orderId])
  @@index([provider])
  @@index([status])
  @@map("payments")
}

/**
 * ===================== OTHER =====================
 */

model Review {
  id Int @id @default(autoincrement())

  /// Rating từ 1 → 5
  /// Constraint được validate ở tầng service
  rating Int

  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int

  @@unique([userId, productId])
  @@index([productId])
  @@index([rating])
  @@map("reviews")
}

model Voucher {
  id            Int         @id @default(autoincrement())
  code          String      @unique
  type          VoucherType
  discount      Int
  maxDiscount   Int?
  minOrderValue Int?

  startDate  DateTime
  endDate    DateTime
  usageLimit Int?
  usedCount  Int      @default(0)
  isActive   Boolean  @default(true)

  orders Order[]

  @@index([isActive])
  @@index([startDate, endDate])
  @@map("vouchers")
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  @@unique([userId, productId])
  @@index([productId])
  @@map("wishlists")
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  @@index([productId])
  @@map("product_images")
}

model Specification {
  id        Int      @id @default(autoincrement())
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  @@index([productId])
  @@map("specifications")
}

model Address {
  id        Int      @id @default(autoincrement())
  fullName  String
  phone     String
  address   String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@index([userId])
  @@map("addresses")
}

model Banner {
  id        Int      @id @default(autoincrement())
  title     String?
  image     String
  link      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@map("banners")
}

model Slider {
  id        Int      @id @default(autoincrement())
  image     String
  title     String?
  subTitle  String?
  link      String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sortOrder])
  @@map("sliders")
}
